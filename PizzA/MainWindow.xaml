<Window x:Class="PizzA.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pizza rendelés" Height="450" Width="400">

	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<!-- Tészta -->
		<TextBlock Text="Válaszd ki a tésztát:"/>
		<ListBox x:Name="lbTesztak" Grid.Row="1" Height="70">
			<ListBoxItem Content="Vékony"/>
			<ListBoxItem Content="Normál"/>
			<ListBoxItem Content="Extra vastag"/>
		</ListBox>

		<!-- Méret -->
		<TextBlock Text="Méret:" Grid.Row="2" Margin="0,10,0,0"/>
		<ComboBox x:Name="cbMeret" Grid.Row="2" Margin="80,10,0,0" Width="120">
			<ComboBoxItem Content="Kicsi"/>
			<ComboBoxItem Content="Közepes"/>
			<ComboBoxItem Content="Nagy"/>
		</ComboBox>

		<!-- Feltétek -->
		<StackPanel Grid.Row="3" Margin="0,10,0,0">
			<TextBlock Text="Feltétek:"/>
			<WrapPanel>
				<CheckBox x:Name="chkSajt" Content="Sajt" Margin="5"/>
				<CheckBox x:Name="chkSonka" Content="Sonka" Margin="5"/>
				<CheckBox x:Name="chkGomba" Content="Gomba" Margin="5"/>
				<CheckBox x:Name="chkOliva" Content="Olívabogyó" Margin="5"/>
				<CheckBox x:Name="chkKukorica" Content="Kukorica" Margin="5"/>
			</WrapPanel>
		</StackPanel>

		<!-- Átvétel -->
		<StackPanel Grid.Row="4" Margin="0,10,0,0">
			<TextBlock Text="Átvétel módja:"/>
			<RadioButton x:Name="rbHazhoz" Content="Házhozszállítás" GroupName="atvetel"/>
			<RadioButton x:Name="rbSzemelyes" Content="Személyes átvétel" GroupName="atvetel"/>
		</StackPanel>

		<!-- GOMB -->
		<Button Grid.Row="5"
                Content="Rendelés összegzése"
                Width="200" Height="40"
                HorizontalAlignment="Center" Margin="0,10,0,0"
                Click="Button_Click"/>
	</Grid>

</Window>
